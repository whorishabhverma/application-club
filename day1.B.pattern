#include<iostream>
using namespace std;
int main()
{
   // cout<<"pattern"<<endl;
    int n; cin>>n;  cout<<"pattern"<<endl;
    for(int i=1;i<=n;i++)
    { int k=1;
        for(int j=1;j<=2*n-1;j++)
        {
            if(j>=n+1-i&&j<=n-1+i&&k)
            {cout<<"*";
            k=0;
            }
            else
            {cout<<" ";
            k=1;}
        }
        cout<<endl;

    }
}
